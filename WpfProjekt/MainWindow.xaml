<Window x:Class="WpfProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProjekt"
        mc:Ignorable="d"
        Title="Projekt" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Opcje">
                <MenuItem Header="Poziom trudności">
                    <MenuItem Header="Łatwy"/>
                    <MenuItem Header="Trudny"/>
                    <MenuItem Header="Niemożliwy"/>
                </MenuItem>
                <MenuItem Header="Resetuj wynik" Click="MenuItem_ResetWynik"/>
            </MenuItem>
            <MenuItem Header="Wygląd">
                <MenuItem Header="Zmień motyw"/>
                <MenuItem Header="Zmień grafikę"/>
            </MenuItem>
            <MenuItem Header="Wyjdź" Click="MenuItem_Close"/>
        </Menu>
        <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Column="2">
                    <Image x:Name="imgAuto" Margin="10" Source="img/kamien.jpg"/>
                </DockPanel>
                <DockPanel>
                    <Image x:Name="imgGracz" Margin="10" Source="img/kamien.jpg"/>
                </DockPanel>
            <WrapPanel Grid.Row="1">
                <Button Click="Button_K" Width="100" Height="60" Margin="12">
                    <Image Source="img/kamien.jpg"/>
                </Button>
                <Button Click="Button_P" Width="100" Height="60" Margin="12">
                    <Image Source="img/papier.jpg"/>
                </Button>
                <Button Click="Button_N" Width="100" Height="60" Margin="12">
                    <Image Source="img/nozyczki.jpg"/>
                </Button>
                </WrapPanel>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                    <TextBlock FontSize="24" FontWeight="Bold" x:Name="wynik" Text="0 : 0" Width="300" TextAlignment="Center"/>
                    <Button Click="Button_Wyslij" Width="300" Content="Graj"/>
                </StackPanel>
            <DockPanel Grid.Row="1" Grid.Column="1">
                <TextBlock x:Name="historia" FontSize="18" TextAlignment="Center" FontWeight="Bold"/>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>